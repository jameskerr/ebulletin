<!DOCTYPE html>
<html>
	<head>
		<title>Ebulletin</title>
		<%= stylesheet_link_tag    "preview", :media => "all" %>
		<%= stylesheet_link_tag 	 "preview_interface", :media => "all" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<%= render 'menu' %>
		<% if notice %>
		<p class="notice"><%= notice %></p>
		<% end %>
		<% if alert %>
		<p class="alert"><%= alert %></p>
		<% end %>
		<%= yield %>
		<%= javascript_include_tag "application" %>
	</body>
</html>
